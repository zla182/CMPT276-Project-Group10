<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/violationIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        app:srcCompat="@drawable/restaurant" />

    <TextView
        android:id="@+id/violationDescription"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/violationSeverityIcon"
        android:layout_toEndOf="@+id/violationIcon"
        android:fontFamily="roboto_light"
        android:text="Restaurant name "
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/violationSeverityIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/violationIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:minWidth="100dp"
        android:minHeight="100dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</RelativeLayout>
